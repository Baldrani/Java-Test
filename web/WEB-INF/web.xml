<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <jsp-config>
        <jsp-property-group>
            <description>Config. de l'encodage des pages JSP</description>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>

    <env-entry>
        <env-entry-name>BDD-HOST</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>localhost</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>BDD-PORT</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>3306</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>BDD-NAME</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>java</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>BDD-USER</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>BDD-PWD</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>rootmysql</env-entry-value>
    </env-entry>

</web-app>